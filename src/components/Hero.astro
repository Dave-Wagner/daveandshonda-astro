---
import { Image } from 'astro:assets';
import HeroImage from '../images/tmp_hero.jpg';
---

<div class="hero min-h-screen relative">
  <Image
    src={HeroImage}
    alt="Hero background"
    class="absolute inset-0 w-full h-full object-cover"
  />
  <div class="hero-overlay bg-opacity-60 absolute inset-0"></div>
  <div class="hero-content text-neutral-content text-center relative z-10">
    <div class="max-w-md">
      <h1 class="mb-5 text-5xl font-bold">Welcome to Our Wedding Homepage</h1>
      <p class="mb-5">
        We are so excited to celebrate our special day with you. Please join us for a day filled with love, joy, and memories to cherish forever.
      </p>
      <button class="btn btn-primary">RSVP Now</button>
    </div>
  </div>
</div>
